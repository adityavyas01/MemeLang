{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist-interpreter",
    "rootDir": "./src",
    "declaration": true
  },
  "include": [
    "src/errors.ts",
    "src/interpreter.ts",
    "src/lexer.ts",
    "src/keywords.ts",
    "src/parser.ts",
    "src/types.ts",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "src/app"
  ]
} 